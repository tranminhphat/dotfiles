{
	"workbench.editor.enablePreview": false,
	"workbench.sideBar.location": "right",
	"workbench.activityBar.visible": false,
	"workbench.startupEditor": "none",
	"workbench.colorTheme": "Gruvbox Minor Dark Hard",
	// Editor
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.inlineSuggest.enabled": true,
	"editor.guides.highlightActiveIndentation": false,
	"editor.guides.indentation": false,
	"editor.matchBrackets": "never",
	"editor.lineNumbers": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs":"active",
	"editor.minimap.enabled": false,
	"editor.fontFamily": "NotoSansMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
	"editor.fontSize": 14,
	"editor.lineHeight": 22,
	"editor.tabSize": 2,
	"editor.cursorStyle": "line",
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	"editor.wordWrap": "off",
	"editor.cursorBlinking": "smooth",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": true
	},
	"editor.tabCompletion": "on",
	// Explorer
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"editor.accessibilitySupport": "off",

	// Terminal
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.fontFamily": "Noto Sans Mono",
	"terminal.integrated.defaultProfile.osx": "fish (2)",
	"terminal.integrated.tabs.location": "left",

	// Hidden files/folders
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": true
	},

	// Extensions
	"gitlens.advanced.messages": {
		"suppressGitMissingWarning": true,
		"suppressLineUncommittedWarning": true
	},
	"extensions.ignoreRecommendations": true,
	"git.enableSmartCommit": true,
	"vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.easymotion": true,
	"vim.smartRelativeLine": true,
	"vim.searchHighlightColor": "#ff79c6",
	"vim.replaceWithRegister": true,
	"vim.camelCaseMotion.enable": true,
	"vim.vimrc.enable": true,
	"vim.vimrc.path": "/Users/phattran/.vimrc",
	"vim.leader": ",",
	"vim.insertModeKeyBindings": [{
				"before": ["j", "k"],
				"after": ["<esc>"]
	}],
	"vim.scroll": 15,
	"vim.sneak": true,
	"vim.targets.enable": true,
	"tabnine.experimentalAutoImports": true,
	"prettier.semi": false,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "none",
	"prettier.bracketSpacing": false,
	/********************************************/

	/* Languages settings */
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"typescript.preferences.importModuleSpecifier": "relative"
	},
	"javascript.validate.enable": false,
	"css.lint.unknownAtRules": "ignore",
	/********************************************/

	/* Others */
	"files.trimTrailingWhitespace": true,
	"diffEditor.ignoreTrimWhitespace": false,
}